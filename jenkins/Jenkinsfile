pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'pytest sources/test_calc.py'
            }
        }

        stage('Install Python Dev Libraries') {
            steps {
                sh 'sudo apt-get update && sudo apt-get install -y python3.12-dev'
            }
        }

        stage('Build Executable') {
            steps {
                sh 'pyinstaller --onefile --no-lsb sources/add2vals.py'
            }
        }

        stage('Archive Artifact') {
            steps {
                archiveArtifacts artifacts: 'dist/add2vals*', fingerprint: true
            }
        }
    }
}

